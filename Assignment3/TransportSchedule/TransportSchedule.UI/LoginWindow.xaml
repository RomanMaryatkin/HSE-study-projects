<Window x:Class="TransportSchedule.UI.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TransportSchedule.UI"
        mc:Ignorable="d"
        Title="Transport Schedule" Height="400" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch">
        <TextBlock Margin="5">Login</TextBlock>
        <TextBox Name="textBoxLogin" Height="20" Margin="5"></TextBox>
        <TextBlock Margin="5">Password</TextBlock>
        <PasswordBox Name="passwordBox" Height="20" Margin="5"></PasswordBox>
        <Button Width="200" Height="25" Margin="5 10 5 35" Click="ButtonLogin_Click">Login</Button>
        <TextBlock HorizontalAlignment="Center">or</TextBlock>
        <Button Width="150" Height="25" Margin="5" Click="ButtonRegister_Click">Register</Button>
    </StackPanel>
</Window>
